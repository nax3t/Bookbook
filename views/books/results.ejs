<!DOCTYPE html>
<html>
<head>
	<title>Search Results</title>
	<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css" rel="stylesheet">
	<link rel="stylesheet" type="text/css" href="style/results.css">
</head>
<body class="topPad" id="results">
    <!-- Fixed navbar -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#"><span class="glyphicon glyphicon-book"></span> Bookbook</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li><a href="/">Home</a></li>
            <li><a href="/books/list">Bookshelf</a></li>
          </ul>
          <form method="GET" action="/books" class="navbar-form navbar-right" role="search">
  					<div class="form-group">
  			  		<input type="text" class="form-control" name ="title" placeholder="Search further...">
  					</div>
  						<button type="submit" class="btn btn-default">Search</button>
					</form>
        </div><!--/.nav-collapse -->
      </div>
    </nav>
	<div class="container">
		<div class="row">
		<div class="col-sm-4"></div>
			<div class="col-sm-4">
				<% for(var i = 0, len = results.length; i < len; i++) { %>
				<div class="well resultsWell">
					<p>
						<h4><strong><a href="<%= results[i].link %>" class="white"><%= results[i].title %></a></strong></h4>
						<% if(results[i].authors !== undefined) { %>
							<p><%= results[i].authors %></p>
						<% } else { %>
							<p>No Author Listed</p>
						<% } %>
						<p><img src="<%= results[i].thumbnail %>" /></p>
					</p>
					<form action="/books/add" method="POST">
						<input type="hidden" name="user_id" value="<%= user.id %>">
						<input type="hidden" name="link" value="<%= results[i].link %>">
						<input type="hidden" name="thumbnail" value="<%= results[i].thumbnail %>">
						<input type="hidden" name="title" value="<%= results[i].title %>">
						<input type="submit" value="Add to Bookshelf" class="btn btn-default">
					</form>
				</div>
				<% } %>
			</div>
			<div class="col-sm-4"></div>
		</div>
		<!-- /.Row -->
	</div>
	<!-- /.Container -->
	<span id="top-link-block" class="hidden">
	    <a href="#top" class="well well-sm noBg"  onclick="$('html,body').animate({scrollTop:0},'slow');return false;">
	        <i class="glyphicon glyphicon-chevron-up"></i> Back to Top
	    </a>
	</span><!-- /top-link-block -->
<script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
<script src="javascript/bookbook.js"></script>
</body>
</html>