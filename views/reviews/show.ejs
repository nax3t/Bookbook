<% include ../header.ejs %>
	<% if (reviews[0] !== undefined) { %>
	<h1><%= book.title %> - Review</h1>
	<hr width="50%">
			<% for (var i = 0, len = reviews.length; i < len; i++) { %>
			<div class="row">
			<div class="col-sm-4"></div>
				<div class="col-sm-4">
					<div class="customWell2">
						<p><strong><%= reviews[i].username %>: </strong><%= reviews[i].body %></p>
					</div>
				</div>
				<div class="col-sm-4"></div>
			</div>
			<% } %>
		<% } else { %>
			<h1>This book has no reviews.</h1>
		<% } %>
			<p><a href="/books/<%= params %>">Add a review</a></p>
			<button onclick="goBack()" class="btn btn-books">Go Back</button>
